@model DirectoryManager.UI.Models.DirectoryModel

@{
    ViewData["Title"] = "Contact Info";
}

<h1>Details</h1>

<p>
    @Html.ActionLink("Create Contact Info", "CreateContactInfo", Model)
</p>

<label asp-for="UUID" class="control-label"></label>
<input asp-for="UUID" class="form-control" readonly="readonly" />
<span asp-validation-for="UUID" class="text-danger"></span>

<table class="table">
    <thead>
        <tr>
            <th>
                Phone Number
            </th>
            <th>
                Email
            </th>
            <th>
                Location
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ContactList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>
