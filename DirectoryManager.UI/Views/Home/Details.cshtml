@model DirectoryManager.UI.Models.DirectoryModel

@{
    ViewData["Title"] = "Contact Info";
}

<h1>Details</h1>

<p>
    @Html.ActionLink("Create Contact Info", "CreateContactInfo", Model)
</p>

<label asp-for="UUID" class="control-label"></label>
<input asp-for="UUID" class="form-control" readonly="readonly" />
<span asp-validation-for="UUID" class="text-danger"></span>

<table class="table">
    <thead>
        <tr>
            <th>
                Contact Id
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Email
            </th>
            <th>
                Location
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ContactList)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ContactId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.ActionLink("Edit Contact Info", "EditContactInfo", new EditContactInfoModel { ContactId = item.ContactId, UUID = Model.UUID }) |
                @Html.ActionLink("Delete Contact Info", "DeleteContactInfo", new EditContactInfoModel { ContactId = item.ContactId, UUID = Model.UUID })
            </td>
        </tr>
        }
    </tbody>
</table>
